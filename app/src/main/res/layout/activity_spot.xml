<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/spotName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="28sp"
        android:text=""/>
    <TextView
        android:layout_below="@+id/spotName"
        android:id="@+id/spotAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text=""
        android:textAlignment="center"/>

    <TextView
        android:layout_below="@+id/spotAddress"
        android:id="@+id/spotInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:textAlignment="center"/>
    <TextView
        android:layout_below="@+id/spotInfo"
        android:id="@+id/spotPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"/>
    <Button
        android:id = "@+id/buttonToMain"
        android:layout_below="@id/spotInfo"
        android:text="На главную"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id = "@+id/buttonToMap"
        android:layout_below="@id/buttonToMain"
        android:text="Открыть на карте"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        style="@style/Widget.AppCompat.Button.Colored"/>
</RelativeLayout>