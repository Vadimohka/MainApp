<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spotName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="28sp"
        android:text=""/>
    <TextView
        android:layout_below="@+id/spotName"
        android:id="@+id/spotAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text=""
        android:textAlignment="center"/>

    <TextView
        android:layout_below="@+id/spotAddress"
        android:id="@+id/spotInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:textAlignment="center"/>
    <TextView
        android:layout_below="@+id/spotInfo"
        android:id="@+id/spotPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"/>

    <Button
        android:layout_below="@+id/spotPhoneNumber"
        android:id="@+id/button_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Найти мой участок" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_spot"
        android:layout_centerHorizontal="true"
        android:text="Построить маршрут"
        android:textColor="@android:color/white"
        android:background="#03A9F4"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Colored"
        />
    <ImageView
        android:id="@+id/homespot"
        android:layout_width="match_parent"
        android:layout_below="@id/button_spot"
        android:layout_height="wrap_content"
        android:contentDescription="HappyCity"
        android:src="@drawable/homespot" />

</RelativeLayout>