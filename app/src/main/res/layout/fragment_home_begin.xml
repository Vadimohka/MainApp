<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/homespot"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:contentDescription="HappyCity"
            android:src="@drawable/homespot"
            android:visibility="gone"/>

        <Button
            android:layout_below="@+id/homespot"
            android:id="@+id/button_spot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Найти мой участок"
            android:visibility="gone"/>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/button_newSpot"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/button_spot"
            android:text="Найти новый участок"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/white"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/button_newHouse"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/button_spot"
            android:text="Выбрать новый дом"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/white"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:textSize="10sp" />



            <androidx.cardview.widget.CardView

                android:layout_below="@id/button_newHouse"
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/spotName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@android:color/black"/>

                    <com.google.android.gms.maps.MapView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/gmap"
                        android:paddingTop="25dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:layout_width="380dp"
                        android:layout_height="200dp"
                        android:enabled="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Адрес:"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/spotAddress"
                            android:layout_width="match_parent"
                            android:layout_height="65sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="80sp"
                            android:fontFamily="@font/roboto_black"
                            android:padding="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/spotInfo"
                            android:layout_width="match_parent"
                            android:layout_height="75sp"
                            android:layout_below="@id/spotAddress"
                            android:layout_marginLeft="80sp"
                            android:fontFamily="@font/roboto_black"
                            android:padding="5dp"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/button_map"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:background="#03A9F4"
                        android:paddingBottom="10dp"
                        android:text="Построить маршрут"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>