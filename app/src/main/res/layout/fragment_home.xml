<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spotName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="28sp"
        android:text=""/>
    <TextView
        android:layout_below="@+id/spotName"
        android:id="@+id/spotAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text=""
        android:textAlignment="center"/>

    <TextView
        android:layout_below="@+id/spotAddress"
        android:id="@+id/spotInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:textAlignment="center"/>
    <TextView
        android:layout_below="@+id/spotInfo"
        android:id="@+id/spotPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/homespot"
        android:layout_below="@+id/spotInfo"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:contentDescription="HappyCity"
        android:src="@drawable/homespot" />
    <Button
        android:layout_below="@+id/homespot"
        android:id="@+id/button_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Найти мой участок" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@android:color/white"
        app:srcCompat="@drawable/ic_yandex_maps" />


</RelativeLayout>